<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sistempakarrekomendasijurusan" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31" >
        <!-- Activity Utama -->
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Aktivity lainnya tidak perlu exported=true jika tidak diakses dari luar -->
        <activity
            android:name=".BidangStudiActivity"
            android:exported="false" />
        <activity
            android:name=".RekomendasiJurusanActivity"
            android:exported="false" />
        <activity
            android:name=".KampusFavoritActivity"
            android:exported="false" />
        <activity
            android:name=".EnsiklopediaJurusanActivity"
            android:exported="false" />
        <activity android:name=".LoginActivity"
            android:exported="false"/>
        <activity android:name=".RegisterActivity"
            android:exported="false"/>
    </application>

</manifest>